{% extends 'AppBlogBundle::layout.html.twig' %}

{% block content %}
    <div class="movie-details">
        <h2 class="movie-title">{{ article.title }}</h2>
        <div class="movie-metadata">
            <table class="metadata table table-bordered">
                <tr>
                    <th>Category:</th>
                    <td>
                        <a href="{{ path('articles_by_category', { 'slug': article.category.slug }) }}">
                            {{ article.category.title }}
                        </a>
                    </td>
                </tr>
            </table>
            <p class="movie-description">{{ article.description }}</p>
        </div>
    </div>
{% endblock %}
